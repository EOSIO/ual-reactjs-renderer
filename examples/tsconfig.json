{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "../../",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true
  },
  "lib": ["esnext"],
  "include": [
    "src/**/*.tsx",
    "examples/**/*"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "public",
    "node_modules"
  ]
}
